{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/opt/homebrew/opt/llvm/bin/clang++",
			"args": [
				"-g",
				"-std=c++17",
				"-I./include",
				"${workspaceFolder}/src/main.cpp",
				"-lglfw",
				"-o",
				"${workspaceFolder}/myprogram"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /opt/homebrew/opt/llvm/bin/clang++"
		}
	]
}